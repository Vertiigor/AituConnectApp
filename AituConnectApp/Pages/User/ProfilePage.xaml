<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AituConnectApp.Pages.User.ProfilePage"
             xmlns:viewmodel="clr-namespace:AituConnectApp.ViewModels"
             x:DataType="viewmodel:ProfilePageModel"
             Title="Profile Page">
    <ScrollView>
        <VerticalStackLayout>
        <Frame BackgroundColor="#FFF" Padding="15" CornerRadius="12" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Username:" FontAttributes="Bold" TextColor="#333"/>
                    <Label Text="{Binding Username}" FontSize="18" TextColor="#333" />

                    <Label Text="Email:" FontAttributes="Bold" Margin="0,10,0,0" TextColor="#333"/>
                    <Label Text="{Binding Email}" FontSize="18" TextColor="#333" />
                </VerticalStackLayout>
            </Frame>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>