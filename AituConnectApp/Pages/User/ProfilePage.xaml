<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AituConnectApp.Pages.User.ProfilePage"
             xmlns:viewmodel="clr-namespace:AituConnectApp.ViewModels"
             x:DataType="viewmodel:ProfilePageModel"
             Title="Profile Page">
    <VerticalStackLayout>
        <Label
            Text="{Binding Username, StringFormat='Username: {0}'}"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"/>

        <Label
            Text="{Binding Email, StringFormat='Email: {0}'}"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>