<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AituConnectApp.Pages.Post.PostDetailsPage"
             xmlns:viewmodel="clr-namespace:AituConnectApp.ViewModels"
             xmlns:dto="clr-namespace:AituConnectApp.Dto.Responses"
             x:DataType="viewmodel:PostDetailsPageModel"
             Title="PostDetailsPage"
             BackgroundColor="#f9f9f9">

    <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">

                <!-- Post Details -->
                <Frame CornerRadius="12" Padding="12" BackgroundColor="{DynamicResource SecondaryContainer}">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Post.Title}"
                               FontSize="20"
                               FontAttributes="Bold" />

                        <Label Text="{Binding Post.OwnerName}"
                               FontSize="14"
                               TextColor="Gray" />

                        <Label Text="{Binding Post.CreatedAt, StringFormat='{0:MMM dd, yyyy HH:mm}'}"
                               FontSize="12"
                               TextColor="Gray" />

                        <Label Text="{Binding Post.Content}"
                               FontSize="16"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Comments Section -->
                <Label Text="Comments"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,10,0,4" />

            <CollectionView ItemsSource="{Binding Comments}"
                ItemTemplate="{StaticResource CommentTemplate}"
                ItemsLayout="VerticalList"
                SelectionMode="None"
                Margin="10" />

            <!-- Add Comment -->
                <Frame Padding="10" CornerRadius="10" BorderColor="Gray">
                    <VerticalStackLayout Spacing="8">
                        <Entry Placeholder="Write a comment..."
                               Text="{Binding NewCommentText}" />
                        <Button Text="Submit"
                                Command="{Binding SubmitCommentCommand}" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

</ContentPage>